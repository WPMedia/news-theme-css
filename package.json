{
  "name": "@wpmedia/news-theme-css",
  "version": "2.1.3",
  "description": "CSS Grid Framework with Bootstrap-like conventions",
  "author": "Brent Miller",
  "license": "ISC",
  "main": "scss/index.scss",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss-watch": "node-sass --watch scss -o css",
    "process-templates": "node -r esm processTemplates.js",
    "build": "node-sass scss -o css",
    "build-guide": "kss --config ./kss-config.json",
    "build-all": "npm run process-templates && npm run build && npm run build-guide"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/WPMedia/news-theme-css.git"
  },
  "devDependencies": {
    "kss": "^3.0.0-beta.25",
    "michelangelo": "^0.8.0",
    "node-sass": "^4.13.0",
    "esm": "^3.2.25",
    "styled-components": "^5.0.1"
  },
  "files": [
    "js",
    "css",
    "scss",
    "kss-orion-theme",
    "styleguide",
    "styleguide.css",
    "kss-config.json",
    "index.html",
    "readme.md"
  ]
}
